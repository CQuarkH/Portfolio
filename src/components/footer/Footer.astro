---
import { Icon } from "astro-icon";
import { socials } from "../../models/socials";
import { me } from "../../models/me";
import SocialItem from "./SocialItem.astro";
import CopyIcon from "./CopyIcon";
---

<footer class="flex flex-col">
  <!-- Socials -->
  <div class="flex flex-col gap-4">
    <span class="flex items-center gap-4">
      <h3 class="text-zinc-200 font-semibold text-xl py-4">Socials</h3>
      <span class="text-zinc-400">
        <Icon name="mdi:at" size="28" />
      </span>
    </span>
    <div class="flex gap-4 flex-wrap">
      {socials.map((social) => <SocialItem social={social} />)}
    </div>
  </div>
  <!-- Contact Email -->
  <div class="flex flex-col py-4">
    <span class="flex items-center gap-4">
      <h3 class="text-zinc-200 font-semibold text-xl py-8">Email</h3>
      <span class="text-zinc-400">
        <Icon name="fa:envelope" size="24" />
      </span>
    </span>

    <div class="text-zinc-300 flex gap-2">
      <span
        id="email"
        class="flex-1 bg-slate-900/80 transition-all ease-in-out px-4 py-2 rounded-lg"
        >{me.email}</span
      >
      <CopyIcon client:load />
    </div>
  </div>
</footer>
