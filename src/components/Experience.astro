---
import IconLabel from "../components/atoms/IconLabel.astro";
import { experience } from "../models/experience";
import { technologies } from "../models/technologies";
import TechnologyItem from "./TechnologyItem.astro";
---

<section class="flex flex-col gap-4">
  <IconLabel iconName="tabler:briefcase" label="Experience" />
  <ol class="relative border-s border-gray-200 dark:border-gray-700">
    {
      experience.map((e) => (
        <li class="mb-10 ms-4">
          <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700" />
          <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
            {e.dateRange}
          </time>
          <h3 class="text-lg font-semibold text-white">
            {e.employer} <span class="text-zinc-500">|</span>{" "}
            <span class="text-yellow-200/90">{e.position}</span>
          </h3>
          <a
            href={e.url}
            class="mb-1 text-sm font-normal leading-none text-blue-400/80 hover:text-blue-400 transition-all duration-200 dark:text-gray-500"
          >
            {e.url}
          </a>
          <p class="py-2 mb-4 text-base font-normal text-gray-400">
            {e.description}
          </p>

          <div class="flex flex-wrap gap-2">
            {e.technologies.map((technology) => (
              <TechnologyItem technology={technology} showLabel={false} />
            ))}
          </div>
        </li>
      ))
    }
  </ol>
</section>
