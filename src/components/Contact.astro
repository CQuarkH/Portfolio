---
import { Icon } from "astro-icon";
import { me } from "../models/me";
import CopyIcon from "./CopyIcon";
---

<section class="flex flex-col w-full" id="contact">
  <h2 class="text-zinc-300 font-semibold py-6 text-2xl flex gap-4 items-center">
    <span class="text-zinc-400"><Icon name="ic:outline-email" size="36" /></span
    > Contact
  </h2>

  <div class="text-zinc-300 flex gap-2">
    <span
      id="email"
      class="flex-1 bg-[#0d0a0f] md:text-lg transition-all ease-in-out px-4 py-2 rounded-lg"
      >{me.email}</span
    >
    <CopyIcon client:load />
  </div>
</section>
