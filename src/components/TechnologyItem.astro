---
import type { Technology } from "../models/technologies";
import { Icon } from "astro-icon";

interface Props {
  technology: Technology;
  showLabel?: boolean;
}

const { technology, showLabel = false } = Astro.props as Props;
---

<span
  class="flex items-center justify-between gap-2 px-4 py-2 hover:border-zinc-400 border-zinc-600 border-2 transition-all duration-300 ease-in-out rounded-xl"
>
  <Icon name={technology.icon} style={`color: ${technology.color}`} size="24" />
  <span class={`text-zinc-300 ${!showLabel && "hidden"} md:inline`}>
    {technology.name}</span
  >
</span>
