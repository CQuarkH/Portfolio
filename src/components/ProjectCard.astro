---
import type { Project } from "../models/projects";
import { Icon } from "astro-icon";

interface Props {
  project: Project;
}

const { project } = Astro.props as Props;
---

<a
  href={project.link}
  class="project-card rounded-lg p-4 h-[250px] bg-slate-900/60 hover:bg-slate-800/40 transition-all ease-in-out hover:scale-[1.01] group"
>
  <!-- Project Image -->
  <picture class="w-full max-w-[40%] h-auto aspect-square overflow-hidden">
    <img src={project.imageUrl} class="h-full w-full rounded-lg object-cover" />
  </picture>
  <!-- Project Content -->
  <div class="flex flex-col justify-between">
    <div class="flex flex-col gap-2">
      <!-- Name -->
      <h2 class="text-zinc-200 font-semibold text-lg">{project.name}</h2>
      <!-- Description -->
      <p class="text-zinc-400">{project.description}</p>
    </div>

    <!-- Technologies and link -->
    <div class="flex justify-between">
      <div class="flex gap-4 p-2">
        {
          project.technologies.map((technology) => (
            <span style={{ color: technology.color }}>
              <Icon name={technology.icon} size="24" />
            </span>
          ))
        }
      </div>

      <span class="text-zinc-500 group-hover:text-zinc-300">
        <Icon name="fa:link" size="24" />
      </span>
    </div>
  </div>
</a>

<style>
  .project-card {
    display: flex;
    flex-direction: row;
    gap: 16px;
  }

  /* Estilos para pantallas peque√±as */
  @media (max-width: 640px) {
    .project-card {
      flex-direction: column;
      height: auto;
      gap: 16px;
    }

    .project-card picture {
      max-width: 100%;
      height: auto;
      max-height: 200px;
    }
  }
</style>
